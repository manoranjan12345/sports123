<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/sports</property>
		<property name="connection.username">root</property>
		<property name="connection.password">master</property>
		<property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>
		<property name="hbm2ddl.auto">update</property>
		<property name="show_sql">true</property>
		
		<mapping class="sports.onlineshopping.entities.User" />
		<mapping class="sports.onlineshopping.entities.Category" />
		<mapping class="sports.onlineshopping.entities.Product" />
		
		
	</session-factory>
</hibernate-configuration>